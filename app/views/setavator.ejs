<%- include header %>
<article class="row blog_mt30">
	<div class="blog_dn upload_info alert alert-danger"></div>
	<div class="setting_left col-lg-2 col-md-2 col-sm-3 col-xs-4">
		<ul class="blog_p0">
			<li>
				<a href="/user/setprofile">个人资料</a>
			</li>
			<li class="blog_active">
				<a href="/user/setavator">头像设置</a>
			</li>
			<li >
				<a href="/user/resetpwd">修改密码</a>
			</li>
		</ul>
	</div>
	<div class="setting_right col-lg-8 col-lg-offset-1 col-md-8 col-md-offset-1 col-sm-7 col-sm-offset-1 col-xs-7 col-xs-offset-1">
		<div  id="upload_img" type='display:none;'>
				<div> 
					<% if (User.avator) { %>
						<img  class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2 col-sm-12  col-xs-12 " src="/images/<%= user.avator %>" />
					<% } else { %>
						<img  class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2 col-sm-8 col-sm-offset-1 col-xs-12 " src="<%= User.head %>" />
					<% } %>
					<div class="progress col-lg-4 col-lg-offset-0 col-md-4 ">
					  <div class="progress-bar blog_w0" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
					    <span class="sr-only">0% Complete</span>
					  </div>
					</div>
				</div>
			<div class="avator_btn_wrap col-lg-4 col-lg-offset-0 col-md-4 ">
				<div class="avator_btn">
					<input id="img" type="file"  value="" multiple accept />
					<input class="btn btn-default" value="上传头像" />
				</div>
			</div>
		</div>
	</div>
</article>
<link rel="stylesheet" type="text/css" href="/css/manager.css" />
